// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Should be hashed before storing
  firstName String?  // Optional initially
  lastName  String?  // Optional initially
  
  // Onboarding tracking
  isOnboarded Boolean @default(false)
  onboardedAt DateTime?

  onboardingSteps OnboardingStep[] // Relation to OnboardingStep
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("users")
}

// Optional: If you want to track onboarding steps
model OnboardingStep {
  id          String   @id @default(cuid())
  userId      String
  stepName    String   // e.g., "welcome", "profile_setup", "dashboard_intro"
  completedAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("onboarding_steps")
}